<UserControl Name="uu"
    x:Class="DrugsProject3._0.Controls.doctorUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DrugsProject3._0.Controls"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" Height="480" Width="827">
    <GroupBox
  Header="Doctor"
        FontSize="25"
  Style="{DynamicResource MaterialDesignGroupBox}"
 
  materialDesign:ShadowAssist.ShadowDepth="Depth3"
  BorderThickness="0">
        <Grid Height="464" VerticalAlignment="Bottom" Margin="0,-44,0,0">
            <Grid.RowDefinitions>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <GroupBox FontSize="15"
  Header=" חיפוש מטופל קיים " Grid.Column="1" Margin="10,49,10,24" >
                <StackPanel Grid.Column="1">
                    <ComboBox
                Grid.Column="1"
                 Height="39"
                Width="126"
                 HorizontalAlignment="Center"
  materialDesign:HintAssist.Hint="תעודת זהות"
  materialDesign:HintAssist.HintOpacity=".26"
  IsEditable="True" Margin="106,30,105,30">
                        <ComboBoxItem Content="204108609"/>
                        <ComboBoxItem Content="312246606"/>
                        <ComboBoxItem Content="204145709"/>

                    </ComboBox>

                    <Button Content="הוספת מרשם" Width="120"  Style="{StaticResource MaterialDesignRaisedAccentButton}" />
                </StackPanel >
            </GroupBox>
            <GroupBox FontSize="15"
  Header=" הוספת מטופל " Grid.Column="0" Margin="10,49,10,24" >
                <Grid>

                    <TextBox materialDesign:HintAssist.Hint="שם פרטי" Text="{Binding Patient.Fname}" HorizontalAlignment="Center" Margin="191,10,35,0" Height="39"  TextWrapping="Wrap"  VerticalAlignment="Top" Width="127" />
                    <TextBox materialDesign:HintAssist.Hint="שם משפחה" Text="{Binding Patient.Lname}" Height="39" HorizontalAlignment="Center" TextWrapping="Wrap"  Margin="36,10,204,282" Width="126"  />
                    <TextBox materialDesign:HintAssist.Hint="תעודת זהות" Text="{Binding Patient.Id}" Height="39" HorizontalAlignment="Center" TextWrapping="Wrap"  Margin="38,82,204,210" Width="124" />
                    <TextBox materialDesign:HintAssist.Hint="מספר טלפון" Text="{Binding Patient.Id}" Height="39" HorizontalAlignment="Center" TextWrapping="Wrap"  Margin="198,82,42,209" Width="126" />
                    <TextBox materialDesign:HintAssist.Hint="כתובת" Text="{Binding Patient.Id}" Height="39" HorizontalAlignment="Center" TextWrapping="Wrap"  Margin="38,144,204,148" Width="124" />
                    <TextBox materialDesign:HintAssist.Hint="היסטוריה רפואית" IsEnabled="False" Height="39" HorizontalAlignment="Center" TextWrapping="Wrap"  Margin="144,208,35,47" Width="174" />

                    <DatePicker  materialDesign:HintAssist.Hint="תאריך לידה"  Text="{Binding Patient.DateOfBirth}" Style="{StaticResource MaterialDesignFloatingHintDatePicker}" Margin="198,147,34,151" Height="45" />
                    <Button Command="{Binding AddCommand}"
                Margin="107,289,109,10"
                Style="{StaticResource MaterialDesignRaisedAccentButton}"
              Width="150"
               ToolTip="Resource name: MaterialDesignRaisedAccentButton"
              materialDesign:RippleAssist.Feedback="#DD000000" Content="הוסף" />
                    <Button Content="קובץ" HorizontalAlignment="Left" Margin="76,234,0,0" VerticalAlignment="Top" Width="74"/>
                </Grid>
            </GroupBox>
            <Button Content="חזור" Grid.Column="1" Style="{StaticResource MaterialDesignRaisedAccentButton}" HorizontalAlignment="Left" Margin="297,393,0,0" VerticalAlignment="Top" Width="74"/>
        </Grid>
    </GroupBox>
</UserControl>
