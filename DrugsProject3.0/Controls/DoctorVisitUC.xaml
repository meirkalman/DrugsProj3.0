<UserControl x:Class="DrugsProject3._0.Controls.DoctorVisitUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DrugsProject3._0.Controls"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
   <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <materialDesign:PackIcon Kind="Plus" Height="36" Width="40" Margin="178,5,0,0" Grid.Column="1" />
        <materialDesign:PackIcon Kind="AccountClock" Height="36" Width="40" Margin="177,5,0,0" />
        <TextBox HorizontalAlignment="Left" IsEnabled="True" Height="31" Margin="135,41,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="127" Text="    היסטוריה רפואית "/>
        <TextBox Grid.Column="1" IsEnabled="True" HorizontalAlignment="Left" Height="31" Margin="135,41,0,0" TextWrapping="Wrap" Text="      הוספת תרופה    " VerticalAlignment="Top" Width="123"/>
        <ComboBox
  materialDesign:HintAssist.Hint="שם התרופה"
  materialDesign:HintAssist.HintOpacity=".26"
  IsEditable="True" Grid.Column="1" Margin="217,91,10,303"/>
        <ComboBox
            
            Grid.Column="1"
  materialDesign:HintAssist.Hint="מספר ימים לנטילת התרופה"
  materialDesign:HintAssist.FloatingScale="1.5"
  materialDesign:HintAssist.FloatingOffset="0, -24"
  MinWidth="72"
  ItemsSource="{Binding LongListToTestComboVirtualization}"
  Style="{StaticResource MaterialDesignFloatingHintComboBox}" Margin="217,122,10,260">
            <ComboBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <VirtualizingStackPanel />
                </ItemsPanelTemplate>
            </ComboBox.ItemsPanel>
        </ComboBox>
        <ComboBox
  materialDesign:HintAssist.Hint="כמות פעמים ביום"
  materialDesign:HintAssist.FloatingScale="1.5"
  materialDesign:HintAssist.FloatingOffset="0, -24"
  MinWidth="72"
  ItemsSource="{Binding LongListToTestComboVirtualization}"
  Style="{StaticResource MaterialDesignFloatingHintComboBox}" Margin="217,165,10,217" Grid.Column="1">
            <ComboBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <VirtualizingStackPanel />
                </ItemsPanelTemplate>
            </ComboBox.ItemsPanel>
        </ComboBox>

        <Button
    Style="{StaticResource MaterialDesignRaisedAccentButton}"
    ToolTip="Resource name: MaterialDesignRaisedAccentButton" Grid.Column="1" Margin="252,245,33,143">
            הוסף תרופה
        </Button>
        <Button
    Style="{StaticResource MaterialDesignRaisedAccentButton}"
    ToolTip="Resource name: MaterialDesignRaisedAccentButton" Grid.Column="1" Margin="252,340,33,48" Content="סיום"/>
        <TextBox HorizontalAlignment="Left" IsEnabled="False" Height="319" Margin="10,91,0,0" TextWrapping="Wrap" Text="היסטוריה רפואית:" VerticalAlignment="Top" Width="376"/>

        <materialDesign:PopupBox
  Style="{StaticResource MaterialDesignMultiFloatingActionPopupBox}"
  PlacementMode="BottomAndAlignCentres"
  ToolTipService.Placement="Right"
  ToolTip="PopupBox, Style MaterialDesignMultiFloatingActionPopupBox"
  Opened="PopupBox_OnOpened"
  Closed="PopupBox_OnClosed" Grid.Column="1" Margin="81,268,0,96">
            <StackPanel>
                <Button
      ToolTip="PDF צור מרשם ב  "
      Opacity="0.5">
                    1
                </Button>
                <Button
      ToolTip="הדפס את המרשם">
                    2
                </Button>

            </StackPanel>
        </materialDesign:PopupBox>
        <TextBox Grid.Column="1" HorizontalAlignment="Left" Height="161" Margin="10,91,0,0" TextWrapping="Wrap" Text="רשימת התרופות:&#xD;&#xA;" VerticalAlignment="Top" Width="188"/>
    </Grid>
</UserControl>
